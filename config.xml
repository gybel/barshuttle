<?xml version='1.0' encoding='utf-8'?>
<widget id="dk.showbus.barshuttle" version="1.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BarShuttle</name>
    <description>
        Barshuttle app.
    </description>
    <author email="b@rbussen.dk" href="http://showbus.dk">
        Showbus Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

<icon src="AppIcon57x57@2x.png" />
<icon src="AppIcon57x57.png" gap:platform="ios" width="57" height="57" />
<icon src="AppIcon72x72.png" gap:platform="ios" width="72" height="72" />
<icon src="AppIcon57x57@2x.png" gap:platform="ios" width="114" height="114" />

<icon src="AppIcon72x72.pn" gap:platform="android" gap:density="ldpi" />
<icon src="AppIcon72x72.pn" gap:platform="android" gap:density="mdpi" />
<icon src="AppIcon57x57@2x.png" gap:platform="android" gap:density="hdpi" />
<icon src="AppIcon57x57@2x.png" gap:platform="android" gap:density="xhdpi" />

<preference name="show-splash-screen-spinner" value="true" />
<preference name="auto-hide-splash-screen" value="false" />
<preference name="AutoHideSplashScreen" value="false" />
<preference name="orientation" value="portrait" />
<gap:splash src="splash.jpg" />

<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>
<preference name="stay-in-webview" value="false" />
<preference name="webviewbounce" value="false" />
<preference name="exit-on-suspend" value="true" />
<access origin="showbus.dk" /> 

</widget>
